<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    include inc/base
  body.searchBG
    include inc/header

    section.modalProfile.none
     #modal1.modal
      .modal-content
        h4 Error
        p Porfavor seleccione una materia para continuar

      .modal-footer
        a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') Cerrar

    main.main
      section.teacher__Register.container
        div.row
          section.teacher__Register--Container.card.col.l12.col.s12.twoContainer#home
            header.teacher__Register--Header.col.l12.col.s12
              h2.title
                | Bienvenido al registro de Profesor
            section.teacher__Register--Steps--Menu.col.l12.col.s12
              ul.ul
                li.list.col.l3.col.s3(onclick=" window.location.href = '/teacher/register/stepone';")
                  div.list__Icon
                    i.fa.fa-id-card.activeItem
                  div.list__Name
                    span.name.activeItem
                      | Datos Personales
                li.list.col.l3.col.s3(onclick="window.location.href = '/teacher/register/steptwo'; ")
                  div.list__Icon
                    i.fa.fa-book.activeItem
                  div.list__Name
                    span.name.activeItem
                      | Materias
                li.list.col.l3.col.s3.otherCursor
                  div.list__Icon
                    i.fa.fa-user-circle-o
                  div.list__Name
                    span.name
                      | Tus Clases
                li.list.col.l3.col.s3.otherCursor
                  div.list__Icon
                    i.fa.fa-comment
                  div.list__Name
                    span.name
                      | Contacto
            section.teacher__Register--Steps--Container.col.l12.col.s12
              
              article.teacher__Register__steps--Two.col.l12
                
                div.form__Two
                  if user.teacher
                    article.preview.card.col.l8.col.m10.col.s12
                      figure.preview__Figure.col.l3.col.s4
                        img(src="#{user.teacher[0].fotoTeacher}", alt="", width="100%")
                      div.preview__Description.col.l9.col.s8
                        header.preview__Description--Header.col.l12.col.s12
                          h4.title
                           | #{user.teacher[0].nombreTeacher}
                           | #{user.teacher[0].apellidoTeacher}
                        div.preview__Description--Options.col.l12
                          ul.ul.col.l5.col.m12.col.s12
                            li.list.col.l3.col.m3.col.s3
                              i.fa.fa-graduation-cap
                            li.list.col.l3.col.m3.col.s3
                              i.fa.fa-users
                            li.list.col.l3.col.m3.col.s3
                              i.fa.fa-user
