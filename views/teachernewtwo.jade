                  div.container__Materias.col.l12.col.s12

                    each m, index in mate

                      - var a = m.name
                      - var b = a.split('-');

                      div.jsMateriasOn.fieldset__Group.col.l3.col.m4.col.s6.letterA#A
                        input.jsOneData(type="hidden", name="clases[#{index}][id]", value="#{m._id}")
                        input.jsTwoData(type="hidden", name="clases[#{index}][idmateria]", value="#{m._id}")
                        input.jsTreeData(type="hidden", name="clases[#{index}][_id]", value="#{m._id}")
                        
                        input.jsFourData(type="checkbox", id="#{m._id}", name="clases[#{index}][name]", value="#{m.name}")

                        label(for="#{m._id}")
                          span.carrer
                            |#{b[0]}
                          p.grade
                            | #{b[1]}
            
                form.form__Two(action="/save/teacher/2", method="post", onsubmit="return validateForm(this);").col.l12.col.s12
                  
                  div.appendMaterias
                      
                  div.fieldset__Ultimate.col.l8
                    fieldset.fieldset__Header.col.l12.down.textLeft.marginCero
                      label ¿Cuál es tu nivel de estudios?
                    fieldset.fieldset.col.l12.col.s12
                      select.browser-default(name="lvlstude", required)
                        option(value="", disabled, selected) Eliga sus estudios
                        option(value="No recibido") No recibido
                        option(value="Cursando") En Curso
                        option(value="Recibido") Recibido
                  
                  fieldset.fieldset.col.l12.col.s12
                    input.btn.right(type="submit", value="Continuar")
              
  
