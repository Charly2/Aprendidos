<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    include inc/base
  body.searchBG
    include inc/header

    main.main
      section.teacher__Register.container
        div.row
          section.teacher__Register--Container.card.col.l12.col.m12.col.s12
            header.teacher__Register--Header.col.l12.col.m12
              h2.title
                 | Bienvenido al registro de Profesor
            section.teacher__Register--Steps--Menu.col.l12.col.s12
              ul.ul
                li.list.col.l3.col.s3(onclick=" window.location.href = '/teacher/register/stepone';")
                  div.list__Icon
                    i.fa.fa-id-card.activeItem
                  div.list__Name
                    span.name.activeItem
                      | Datos Personales
                li.list.col.l3.col.s3.otherCursor
                  div.list__Icon
                    i.fa.fa-book
                  div.list__Name
                    span.name
                      | Materias
                li.list.col.l3.col.s3.otherCursor
                  div.list__Icon
                    i.fa.fa-user-circle-o
                  div.list__Name
                    span.name
                      | Tus Clases
                li.list.col.l3.col.s3otherCursor
                  div.list__Icon
                    i.fa.fa-comment
                  div.list__Name
                    span.name
                      | Contacto
            section.teacher__Register--Steps--Container.col.l12.col.s12
              article.teacher__Register__Steps--One.col.l8.col.s12
                form.form__One(action="/save/teacher/1", method="post").col.l12.col.s12
                  fieldset.header__Fieldset.col.l12.col.s12
                    label
                      | Nombre y Apellidos
                  if user.name
                    fieldset.fieldset.col.l6.col.s12
                      input(type="text", placeholder="Nombre", name="isNombres", required, value="#{user.name}")
                  else
                    fieldset.fieldset.col.l6.col.s12
                      input(type="text", placeholder="Nombre", name="isNombres", required)

                  if user.username

                    fieldset.fieldset.col.l6.col.s12
                      input(type="text", placeholder="Apellidos", name="isApellido", required, value="#{user.username}")

                  else

                    fieldset.fieldset.col.l6.col.s12
                      input(type="text", placeholder="Apellidos", name="isApellido", required)


                  fieldset.header__Fieldset.col.l12.col.s12
                    label
                      | Genero?
                  fieldset.fieldset.col.l12.col.s12
                    if user.genero == 'Hombre'
                      select.browser-default(name="isGenero", required)
                        option(value="", disabled) Seleccione su genero 
                        option(value="Hombre", selected) Hombre
                        option(value="Mujer") Mujer

                    else if user.genero == 'Mujer'
                      select.browser-default(name="isGenero", required)
                        option(value="", disabled) Seleccione su genero 
                        option(value="Hombre") Hombre
                        option(value="Mujer", selected) Mujer

                    else

                      select.browser-default(name="isGenero", required)
                        option(value="", selected, disabled) Seleccione su genero 
                        option(value="Hombre") Hombre
                        option(value="Mujer") Mujer


                  fieldset.header__Fieldset.col.l12.col.s12
                    label
                      | ¿Cuál es tu email?
                  if user.email
                    fieldset.fieldset.col.l12.col.s12
                      input(type="email", placeholder="Email", name="isEmail", required, value="#{user.email}")
                  else
                    fieldset.fieldset.col.l12.col.s12
                      input(type="email", placeholder="Email", name="isEmail", required)

                  fieldset.header__Fieldset.col.l12.col.s12
                    label
                      | ¿En qué fecha naciste?
                  if user.edad
                    fieldset.fieldset.col.l12.col.s12
                      input.datepicker(type="text", name="isDate", required, value="#{user.edad}")

                  else
                    fieldset.fieldset.col.l12.col.s12
                      input.datepicker(type="text", name="isDate", required, value="#{user}")

                  fieldset.fieldset.col.l12.col.s12
                    input.btn.right(type="submit", value="Continuar")
              
    include inc/footer